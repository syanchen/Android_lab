<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="姓名："
            android:textSize="15dp"
            android:gravity="center"
            android:id="@+id/abovename"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/addname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/abovename"
            android:layout_toRightOf="@+id/abovename"
            android:layout_toEndOf="@+id/abovename" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/abovebirth"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="生日："
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/addbirth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/abovebirth"
            android:layout_toRightOf="@+id/abovebirth"
            android:layout_toEndOf="@+id/abovebirth" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/abovegift"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="礼物："
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/addgift"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/abovegift"
            android:layout_toRightOf="@+id/abovegift"
            android:layout_toEndOf="@+id/abovegift" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="0.08">
        <Button
            android:id="@+id/additem"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#00ca58"
            android:text="增加"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>