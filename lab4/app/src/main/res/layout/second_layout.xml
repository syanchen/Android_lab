<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    >

        <RelativeLayout
            android:layout_width="381dp"
            android:layout_height="224dp"
            android:layout_gravity="left"
            android:background="#55848282"
            android:layout_weight="1"
            >

            <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@drawable/i0" />

            <ImageButton
                android:id="@+id/star"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/pic"
                android:layout_alignTop="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="bottom|right"
                android:layout_alignParentBottom="true"
                android:src="@drawable/empty_star"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="名字"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/pic"/>

            <ImageButton
                android:id="@+id/imb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/back" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightblack"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="14247438294"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:text="重量 300g"
                android:textSize="18dp" />

            <TextView
                android:layout_width="2sp"
                android:layout_height="30sp"
                android:background="@color/lightgrey"
                android:layout_alignBottom="@+id/buy"
                android:layout_alignBaseline="@+id/buy"
                android:layout_marginRight="20sp"
                android:layout_toLeftOf="@+id/buy"/>


            <ImageButton
                android:id="@+id/buy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shoplist"
                android:layout_marginRight="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="#FFFFFF"
                />
        </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/lightblack"
            android:text="更多产品信息"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:background="#1E000000"/>

    </LinearLayout>

        <ListView
            android:id="@+id/listview2"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
        </ListView>


</LinearLayout>